@model IEnumerable<Bookstore.Models.Book>


@{
    ViewBag.Title = "Bookstore";
}

<h2>Bookstore</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Search", "Bookstore", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label for="searchTerm">Search:</label>
                @Html.TextBox("searchTerm", null, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
    <div class="col-md-6 text-right">
        @Html.ActionLink("Reserve a Book", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Is Reserved?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Name</td>
                <td>@(book.IsReserved ? "Yes" : "No")</td>
                <td>
                    @if (!book.IsReserved)
                    {
                        using (Html.BeginForm("Reserve", "Bookstore"))
                        {
                            @Html.Hidden("bookId", book.Id)
                            <button type="submit" class="btn btn-success">Reserve</button>
                        }
                    }
                    else
                    {
                        <button class="btn btn-danger disabled">Reserved</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["BookingNumber"] != null)
{
    <div class="alert alert-success">
        Your booking number is @TempData["BookingNumber"]
    </div>
}

