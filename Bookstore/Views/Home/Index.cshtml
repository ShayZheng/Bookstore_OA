@model IEnumerable<Bookstore.Models.Book>

<h1>Bookstore</h1>

@using (Html.BeginForm("Search", "Bookstore", FormMethod.Post))
{
    <div class="search">
        @Html.TextBox("searchTerm", null, new { placeholder = "Search books..." })
        <button type="submit">Search</button>
    </div>
}

@if (!Model.Any())
{
    <p>No matching books were found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Book ID</th>
                <th>Name</th>
                <th>Reserved</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@(book.IsReserved ? "Yes" : "No")</td>
                    <td>
                        @if (!book.IsReserved)
                        {
                            using (Html.BeginForm("Reserve", "Bookstore", new { bookId = book.Id }, FormMethod.Post))
                            {
                                <button type="submit">Reserve</button>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

